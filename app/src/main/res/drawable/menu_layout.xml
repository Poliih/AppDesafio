<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_menu_background"
    android:padding="16dp"
    android:layout_gravity="end"
    android:layout_margin="16dp">

    <ImageButton
        android:id="@+id/menuAddWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_word"
        android:contentDescription="Adicionar Palavra"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>

    <ImageButton
        android:id="@+id/menuGenerateChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_generate_challenge"
        android:contentDescription="Gerar Desafio"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>

    <ImageButton
        android:id="@+id/menuHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_history"
        android:contentDescription="HistÃ³rico"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>
</LinearLayout>
